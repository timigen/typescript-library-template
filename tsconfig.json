{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "NodeNext",
      "declaration": true,
      "target": "ES2022",
      "removeComments": true,
      "typeRoots": [
        "./node_modules/@types",
        "./custom_definitions"
    ],
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/example/index.ts"
  ],
  "exclude": [
    "tests/*.spec.ts"
  ]
}
